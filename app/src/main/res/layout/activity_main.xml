<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:id="@id/title"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
    >
        <TextView
                android:text="@string/app_name"
                android:textSize="80sp"
                android:textColor="#000"
                android:layout_marginVertical="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
        />
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opcion_jugador"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/div"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            android:layout_marginVertical="30dp"
    >
        <RadioButton
                android:text="@string/circulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circulo"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginEnd="30dp"
        />
        <RadioButton
                android:text="@string/cruz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cruces"
                app:layout_constraintStart_toEndOf="@+id/radioButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/div"
            android:gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/grey"
            android:id="@+id/div2"
    >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/edit_text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/inputNombre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:inputType="text"
                android:autofillHints="name"
        />
    </LinearLayout>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/tic_tac_toe_39453"
            app:layout_constraintTop_toBottomOf="@id/div2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="30dp"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="50dp"
            android:text="@string/comenzar"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>